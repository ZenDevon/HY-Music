/* components/nav-bar/nav-bar.wxss */
.nav-bar .nav {
  display: flex;
  height: 44px;
  color: #fff;
}
.nav .left, .nav .right, .nav .center {
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav .left, .nav .right {
  width: 120rpx;
}
.nav .center {
  flex: 1;
}
/* 控制内容显示 */
.left .icon {
  width: 40rpx;
  height: 40rpx;
}
.default {
  display: none;
}
.slot:empty + .default {
  display: flex;
}