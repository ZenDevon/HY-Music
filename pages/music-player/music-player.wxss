/* pages/music-player/music-player.wxss */
.bg-image, .bg-cover {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.bg-cover {
  background-color: rgba(0, 0, 0, .2);
  backdrop-filter: blur(10px);
}

/* 自定义导航 */
.tabs {
  display: flex;
  font-size: 28rpx;
  color: #aaa;
}
.tabs .item.active {
  color: #fff;
}
.tabs .line {
  margin: 0 8rpx;
}

/* 歌曲布局 */
.music {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #fff;
  box-sizing: border-box;
  padding: 40rpx 60rpx;
}
.music .album {
  flex: 1;
}
.music .album .image {
  width: 100%;
  border-radius: 12rpx;
}
.music .info .name {
  font-size: 48rpx;
  font-weight: 700;
}
.music .info .singer {
  margin-top: 10rpx;
}
.music .lyric {
  text-align: center;
  margin: 16rpx 0;
  
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.music .slider {
  margin: 16rpx 8rpx 10rpx 18rpx;
}
.music .proress {
  margin: 12rpx 0;
}
.music .proress .time {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}
.music .controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 12rpx 0;
}
.music .controls .btn {
  width: 80rpx;
  height: 80rpx;
}
.music .controls .btn.play {
  width: 140rpx;
  height: 140rpx;
}

/* 歌词样式 */
.lyric-list {
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  height: 100%;
}
.lyric-list .item {
  height: 35px;
  line-height: 35px;
}